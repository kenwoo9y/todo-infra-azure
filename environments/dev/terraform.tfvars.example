# Project Configuration
project_name = "todoapp-dev"
location     = "japaneast"

# Resource Group
resource_group_name = "todo-app-dev-rg"

# Storage Account
storage_account_name = "todoappdevstorage"

# Azure Container Registry
acr_name = "todoappdevacr"

# Backend Database Configuration
default_database_type = "mysql"  # "mysql" or "postgresql"
database_name = "todoapp_dev"

# MySQL Configuration (both databases will be deployed)
# Password is set via environment variable MYSQL_PASSWORD
mysql_user = "todoapp_user"
# mysql_password = "Set from environment variable MYSQL_PASSWORD"

# PostgreSQL Configuration (both databases will be deployed)
# Password is set via environment variable POSTGRESQL_PASSWORD
postgresql_user = "todoapp_user"
# postgresql_password = "Set from environment variable POSTGRESQL_PASSWORD"

# Tags
tags = {
  Environment = "dev"
  Project     = "todo-app"
  ManagedBy   = "terraform"
  Owner       = "your-team"
  CostCenter  = "development"
} 