# プロジェクト設定
project_name = "todoapp-dev"
location     = "japaneast"

# リソースグループ
resource_group_name = "todo-app-dev-rg"

# ストレージアカウント
storage_account_name = "todoappdevstorage"

# Azure Container Registry
acr_name = "todoappdevacr"

# データベース設定
database_type = "mysql"  # "mysql" または "postgresql"
database_name = "todoapp_dev"

# MySQL設定（database_type = "mysql" の場合）
# パスワードは環境変数 MYSQL_ADMIN_PASSWORD で設定
mysql_admin_username = "admin"
# mysql_admin_password = "環境変数 MYSQL_ADMIN_PASSWORD から設定"

# PostgreSQL設定（database_type = "postgresql" の場合）
# パスワードは環境変数 POSTGRESQL_ADMIN_PASSWORD で設定
postgresql_admin_username = "admin"
# postgresql_admin_password = "環境変数 POSTGRESQL_ADMIN_PASSWORD から設定"

# タグ
tags = {
  Environment = "dev"
  Project     = "todo-app"
  ManagedBy   = "terraform"
  Owner       = "your-team"
  CostCenter  = "development"
} 