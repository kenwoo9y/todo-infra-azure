# Azure Subscription ID (Required)
# subscription_id = "your-subscription-id"

# Azure Region (Optional)
location     = "japaneast"

# Database passwords (Required)
mysql_password = "your-mysql-secure-password"
postgresql_password = "your-postgresql-secure-password"

# Environment settings (Optional)
environment = "dev"
name_prefix = "todo"

# Container Image (Optional)
# Leave empty for initial deployment to create infrastructure first (Container Registry, databases, etc.)
# After pushing your Docker image to Container Registry, set this value and redeploy to create Container Apps service
# Example: "<your-registry-name>.azurecr.io/todo-backend:latest"

# Default database type (Optional)
# Choose "mysql" or "postgresql"
default_database_type = "mysql"

# Database names and user names (Optional)
mysql_database_name = "todo_mysql_db"
postgresql_database_name = "todo_postgresql_db"
mysql_user = "todo_mysql_user"
postgresql_user = "todo_postgresql_user"

# Tags
tags = {
  Environment = "dev"
  Project     = "todo-app"
  ManagedBy   = "terraform"
  Owner       = "your-team"
  CostCenter  = "development"
} 