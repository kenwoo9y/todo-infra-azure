# プロジェクト設定
project_name = "todoapp-dev"
location     = "japaneast"

# リソースグループ
resource_group_name = "todo-app-dev-rg"

# ストレージアカウント
storage_account_name = "todoappdevstorage"

# Azure Container Registry
acr_name = "todoappdevacr"

# バックエンドデータベース設定
default_database_type = "mysql"  # "mysql" または "postgresql"
database_name = "todoapp_dev"

# MySQL設定（両方のデータベースがデプロイされます）
# パスワードは環境変数 MYSQL_PASSWORD で設定
mysql_user = "todoapp_user"
# mysql_password = "環境変数 MYSQL_PASSWORD から設定"

# PostgreSQL設定（両方のデータベースがデプロイされます）
# パスワードは環境変数 POSTGRESQL_PASSWORD で設定
postgresql_user = "todoapp_user"
# postgresql_password = "環境変数 POSTGRESQL_PASSWORD から設定"

# タグ
tags = {
  Environment = "dev"
  Project     = "todo-app"
  ManagedBy   = "terraform"
  Owner       = "your-team"
  CostCenter  = "development"
} 